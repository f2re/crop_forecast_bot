# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Copernicus CDS API (Climate Data)
# Register at: https://cds.climate.copernicus.eu/
CDS_API_URL=https://cds.climate.copernicus.eu/api/v2
CDS_API_KEY=your_uid:your_api_key

# OpenRouter API (LLM Recommendations - Optional)
# Register at: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your_key_here

# PostgreSQL Database
# Will be auto-configured by telegram-bots-platform
# The URL is automatically set in docker-compose.yml with asyncpg driver
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/crop_forecast_bot
DB_HOST=postgres
DB_PORT=5432
DB_NAME=crop_forecast_bot
DB_USER=postgres
DB_PASSWORD=postgres

# Application Settings
PYTHONUNBUFFERED=1
LOG_LEVEL=INFO

# Google Earth Engine (Optional)
# Authenticate with: earthengine authenticate
# Credentials will be mounted from ~/.config/earthengine
